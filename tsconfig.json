{
    "include": ["src/**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "target": "ES2018",
        "module": "CommonJS",
        "esModuleInterop": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    }
}
